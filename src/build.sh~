#!/bin/bash

if [ "$1" == "--debug" ];
then
    g++ src/*.cpp  -Wall -lraylib -lGL -lm -lpthread -ldl -lrt -g -o src/build/debug/run
elif [ "$1" == "--release" ];
then
    g++ *.cpp src/*.cpp -Wall -lraylib -lGL -lm -lpthread -ldl -lrt -O0 -o src/build/debug/run
elif [ "$1" == "--run" ];
then
    src/build/debug/run
elif [ "$1" == "--gdb" ];
then
    gdb ./build/src/debug/run 
elif [ "$1" == "--clean" ];
then
    rm *.cpp~
else
    echo "code compiled in debug mode"
    g++ *.cpp -Wall -Isrc/*.cpp -lraylib -lGL -lm -lpthread -ldl -lrt -o src/build/debug/run
fi
